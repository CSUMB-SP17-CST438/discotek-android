<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.jocruzcsumb.discotheque.MainActivity"
    android:weightSum="1"
    android:orientation="vertical"
    android:background="@drawable/all_background">

    <RelativeLayout
        android:id="@+id/loadingPanel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:indeterminate="true" />
    </RelativeLayout>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.50"
        android:orientation="vertical" />

    <ImageView
        android:id="@+id/splash_Logo_ImageView"
        android:layout_width="fill_parent"
        android:layout_height="46dp"
        android:src="@drawable/all_logo"
        android:ems="10"
        android:gravity="center"
        android:layout_weight="0.35"
        android:elevation="4dp"/>

    <ImageView
        android:id="@+id/slaph_title_font_ImageView"
        android:layout_width="fill_parent"
        android:layout_height="138dp"
        android:src="@drawable/all_titlefont"
        android:ems="10"
        android:gravity="center"
        android:elevation="4dp"
        android:paddingBottom="20dp" />





    <!-- google signin -->
    <com.google.android.gms.common.SignInButton
        android:id="@+id/google_login_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="2dp"
        android:paddingBottom="5dp" />


    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="58dp" >
    </FrameLayout>

</LinearLayout>

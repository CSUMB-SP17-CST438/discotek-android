<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/floor_name_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/floorname" />

        <EditText
            android:id="@+id/edit_floor_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@string/editFloor" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/floor_genre_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/genrename" />

        <!--<EditText-->
            <!--android:id="@+id/edit_genre_name"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="@string/editGenre" />-->

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/splitSpinner"
            android:padding="50dp"></Spinner>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/cancel_floor_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cancelbutton" />

        <Button
            android:id="@+id/create_floor_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/createFloorButton" />

    </LinearLayout>

</LinearLayout>
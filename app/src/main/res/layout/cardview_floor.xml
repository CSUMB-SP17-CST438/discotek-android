<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="3dp"
    >

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/floor_cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_row"
        card_view:cardElevation="2dp"
        card_view:cardCornerRadius="4dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="137dp"


            >

            <ImageView
                android:id="@+id/theme"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/all_logo"
                android:layout_toRightOf="@+id/floorname"
                android:layout_toEndOf="@+id/floorname"
                android:layout_alignParentBottom="true"
                android:scaleType="centerCrop"

                />

            <TextView
                android:id="@+id/floorname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Carsen's room"
                android:textSize="20sp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:padding="16dp"
                />

            <TextView
                android:id="@+id/genre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:text="Soft Rock"
                android:layout_alignBottom="@+id/theme"
                android:padding="16dp"


                android:layout_toLeftOf="@+id/theme"
                android:layout_toStartOf="@+id/theme" />


        </RelativeLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>
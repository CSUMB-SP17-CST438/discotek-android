<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="3dp"
    >

    <android.support.v7.widget.CardView
        android:id="@+id/floor_cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_row"
        card_view:cardBackgroundColor="#737373"
        card_view:cardElevation="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:padding="16dp">

            <ImageView
                android:id="@+id/theme"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentTop="true"
                android:layout_marginRight="16dp"
                android:src="@drawable/all_logo"
                android:layout_centerVertical="true"
                />

            <TextView
                android:id="@+id/floorname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/theme"
                android:text="Carsen's room"
                android:textColor="@string/colorTitle"
                android:textSize="28sp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:id="@+id/genre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/theme"


                android:layout_toRightOf="@+id/theme"
                android:text="Soft Rock"
                android:textColor="@string/colorsubTitle"
                android:textSize="20sp" />


        </RelativeLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>